package o_Chapter14.view;

import java.util.List;
import java.util.Scanner;

import o_Chapter14.controller.BookController;
import o_Chapter14.model.Book;
public class BookView {
	private Scanner sc;
	//BookController 객체 저장하기 위한 변수
	private BookController bookController;
	
	//생성자
	public BookView() {
		this.sc = new Scanner(System.in);
		bookController = new BookController();
	}
	
	// 사용자에게 메뉴를 표시하고 입력을 처리하는 메서드
	 public void showMenu() {
		 // 책 추가, 모든 책 조회, 책 검색, 서비스 중단
		 System.out.println("1. Add a book");
		 System.out.println("2. Show all books");
		 System.out.println("3. search for a book");
		 System.out.println("4. Quit");
		 System.out.println("메뉴를 선택해주세요 : ");
		 
		 //사용자로부터 선택을 입력받기
		 int choice = sc.nextInt();
		 sc.nextLine();
		 
		 switch(choice) {
		 case 1:
			 addBookView();
			 break;
		 case 2:
			 showAllBooks();
			 break;
		 case 3:
			 searchBookView();
		 default:
			 System.out.println("종료");
			 break;
		 }
		 
	 }
	 
	 private void addBookView() {
		 System.out.println("'책의 제목을 입력해.");
		 String title = sc.nextLine();
		 System.out.println("'책의 저자 입력해.");
		 String author = sc.nextLine();
		 System.out.println("'책의 출판사 입력해.");
		 String publisher = sc.nextLine();
		 
		 bookController.addBook(title, author, publisher);
	 }
	 
	 private void showAllBooks() {
		 
		 List<Book> allBooks = bookController.getAllBooks();
		 for(Book book : allBooks) {
			 System.out.println(book);
		 }
	 }
	 
	 private void searchBookView() {
		 
	 }
}
